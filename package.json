{
  "name": "ts",
  "version": "1.0.0",
  "description": "TypeScript node.js API",
  "main": "index.js",
  "scripts": {
    "build": "tsc",
    "start": "yarn build && node dist/src/index.js | pino-pretty -c",
    "start:local": "ts-node-dev --transpile-only src/index.ts  | pino-pretty -c",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint ./src ./test --ext .ts",
    "lint:fix": "eslint ./src ./test --ext .ts --fix",
    "test": "yarn test:unit && yarn test:func",
    "test:func": "jest --projects ./test --runInBand",
    "test:unit": "jest",
    "style:check": "prettier --check 'src/**/*.ts' 'test/**/*.ts'",
    "style:fix": "prettier --write 'src/**/*.ts' 'test/**/*.ts'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xkHeitor/ts.git"
  },
  "keywords": [
    "nodejs.typescript.api"
  ],
  "author": "Heitor Carvalho R.",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/xkHeitor/ts/issues"
  },
  "homepage": "https://github.com/xkHeitor/ts#readme",
  "devDependencies": {
    "@types/config": "^0.0.40",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/express-pino-logger": "4.0.2",
    "@types/express-rate-limit": "^6.0.0",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.0.2",
    "@types/lodash": "^4.14.178",
    "@types/module-alias": "^2.0.1",
    "@types/moment": "^2.13.0",
    "@types/mongoose": "^5.11.97",
    "@types/multer": "1.4.3",
    "@types/nock": "^11.1.0",
    "@types/node": "^16.11.7",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "4.1.2",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "jest": "^27.3.1",
    "nock": "^13.2.1",
    "pino-pretty": "^7.3.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@overnightjs/core": "^1.7.6",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^8.5.6",
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "body-parser": "^1.19.0",
    "config": "^3.3.6",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-openapi-validator": "3.16.1",
    "express-pino-logger": "5.0.0",
    "express-rate-limit": "^6.0.5",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "module-alias": "^2.2.2",
    "moment": "^2.29.1",
    "mongoose": "^6.1.0",
    "multer": "^1.4.4",
    "pino": "^7.6.2",
    "swagger-ui-express": "4.1.4"
  }
}
